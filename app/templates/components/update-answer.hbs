{{#if updateAnswerForm}}
  <h4>Update {{answer.author}}'s answer</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Your Answer</label>
        {{input value=answer.content id="content" placeholder=answer.content class="form-control"}}
      </div>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=answer.author id="author" placeholder=answer.author class="form-control"}}
      </div>

      <button {{action 'update' answer}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn" {{action 'updateAnswerForm'}}>Update Answer</button>
{{/if}}
